{
    "name": "ykw/cruet",
    "description": "PHP port of the Rust cruet library for string inflections. Provides case conversions, pluralization, ordinalization, and other string transformations.",
    "type": "library",
    "keywords": [
        "inflection",
        "inflector", 
        "string",
        "case",
        "conversion",
        "camelcase",
        "snake_case",
        "kebab-case",
        "pluralize",
        "singularize",
        "ordinalize"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Cruet Contributors",
            "email": "contributors@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Ykw\\Cruet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ykw\\Cruet\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage/clover.xml",
        "analyse": "phpstan analyse src --level=max",
        "cs-fix": "php-cs-fixer fix src",
        "ci": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}